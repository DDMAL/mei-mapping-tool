extends ../layout

block content
    h1.
         #{neume.name}
    p Name: #{neume.name}
    p folio: #{neume.folio}
    p Description: #{neume.description}
    p Classification: #{neume.classification}
    p Mei Snippet: #{neume.mei}
    p Date: #{neumedob}
    p Images: #{neume.imagePath}//path of images
    img#image( class="optional" src='http://localhost:3000/gallery/#{neume.imagePath}')
    form
      input(type='button', value='Back', onclick='history.go(-1)')
    script.
      $.get("http://localhost:3000/gallery/#{neume.imagePath}")
            .done(function() { 
                // Do something now you know the image exists.

            })
            .fail(function() { 
               var image = document.getElementById("image");
               image.src = "/javascripts/no-image-icon-6.png";
            })