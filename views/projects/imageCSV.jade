 script.
    function getVal(sel){
      var fileSelection = document.getElementById("fileTypeSelect");
      var inputFile = document.getElementById("uploadFile");

      if(sel.value == ".xlsx"){
        $('#uploadFile').attr("accept",".xlsx")
        console.log('xlsx')
      }
      else if(sel.value == ".xls"){
        inputFile.accept = ".xls";
        console.log('xls')
      }
      else if(sel.value == ".csv"){
        $('#uploadFile').attr("accept",".csv")
        console.log('csv')
      }
      else if(sel.value == ".html"){
        inputFile.accept = "text/html";
        console.log('html')
      }
      else if(sel.value == ".odt"){
        $('#uploadFile').attr("accept",".odt")
        console.log('odt')
      }
    else
